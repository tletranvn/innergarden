{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="p-4 shadow-sm rounded bg-light text-dark">
                <h1 class="h3 mb-3 text-center">Cr√©er un compte</h1>

                {# --- START: Flash Message Display --- #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {# --- END: Flash Message Display --- #}

                {{ form_start(registrationForm, {'attr': {'id': 'registrationForm'}}) }}
                    {# --- MODIFIED: Explicitly rendering form_errors for each field to ensure visibility --- #}
                    {# form_row usually includes errors, but this ensures it if a custom theme/CSS hides them #}
                    <div class="mb-3"> {# Add margin-bottom for spacing #}
                        {{ form_label(registrationForm.pseudo) }}
                        {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.pseudo) }} {# Explicitly render errors #}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }} {# Explicitly render errors #}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }} {# Explicitly render errors #}
                    </div>

                    {# For checkboxes, errors are usually handled differently by themes #}
                    <div class="mb-3 form-check"> {# Use form-check for Bootstrap checkbox styling #}
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {'class': 'form-check-input'}
                        }) }}
                        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }} {# Explicitly render errors #}
                    </div>
                    {# --- END MODIFIED SECTION --- #}
                    
                    <br>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-custom" id="submitButton">Inscription</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}