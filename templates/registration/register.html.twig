{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="p-4 shadow-sm rounded bg-light text-dark">
                <h1 class="h3 mb-3 text-center">Cr√©er un compte</h1>

                {# --- START: Flash Message Display --- #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {# --- END: Flash Message Display --- #}

                {# The 'id' attributes on form and button are not strictly necessary for non-AJAX,
                   but keeping them is harmless. #}
                {{ form_start(registrationForm, {'attr': {'id': 'registrationForm'}}) }}
                    {# form_row will automatically add Bootstrap's 'is-invalid' class and display errors #}
                    {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe',
                        'attr': {'class': 'form-control'}
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'J\'accepte les conditions d\'utilisation',
                        'attr': {'class': 'form-check-input'}
                    }) }}
                    <br>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-custom" id="submitButton">Inscription</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}