{% extends 'base.html.twig' %}

{% block title %}Accueil - Inner Garden{% endblock %}

{% block body %}
    <main>
        <section class="hero-section text-center py-5 mb-5 rounded-3 shadow-lg">
            <div class="container">
                <h1 class="hero-title display-3 fw-bold">
                    Découvrez un monde de transformation et de nature
                </h1>
                <p class="hero-subtitle lead">
                    Inner Garden est votre oasis pour cultiver la vie, le jardinage et l'exploration de soi.
                </p>
            </div>
        </section>

        <section class="categories-section py-5 mb-5 text-center rounded-3 shadow-sm">
            <div class="container">
                <h2 class="section-title display-4 mb-5">Nos catégories phares</h2>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center">
                    
                    {% set categories = [
                        { alt: 'Jardinage', title: 'Jardinage', text: 'Conseils, astuces et inspiration pour cultiver votre propre paradis vert.' },
                        { alt: 'Voyage Nature', title: 'Voyage Nature', text: 'Partez à l\'aventure et reconnectez-vous avec la beauté sauvage du monde.' },
                        { alt: 'Bien-être', title: 'Bien-être', text: 'Cultivez votre paix intérieure et votre équilibre avec nos guides.' },
                        { alt: 'Développement Personnel', title: 'Développement Personnel', text: 'Des ressources pour grandir, apprendre et transformer votre vie.' }
                    ] %}

                    {% for cat in categories %}
                        <div class="col">
                            <div class="card h-100 shadow-lg card-custom">
                                <img src="{{ asset('images/placeholder.png') }}" class="card-img-top" alt="{{ cat.alt }}">
                                <div class="card-body text-start">
                                    <h3 class="card-title card-title-custom">{{ cat.title }}</h3>
                                    <p class="card-text card-text-custom">{{ cat.text }}</p>
                                    <a href="#" class="btn btn-custom">Explorer</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    
                </div>
            </div>
        </section>

        {# Inclure la section des derniers articles ici #}
        {{ render(controller('App\\Controller\\ArticleController::latestArticles', { 'limit': 5 })) }}

    </main>
{% endblock %}
