{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur - Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square" aria-hidden="true"></i> Modifier l'Utilisateur: {{ user.pseudo }}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.pseudo) }}
                        {{ form_widget(form.pseudo) }}
                        {{ form_errors(form.pseudo) }}
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> Le pseudo doit contenir entre 3 et 50 caractères
                        </small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> L'email sera utilisé pour la connexion
                        </small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plainPassword) }}
                        {{ form_widget(form.plainPassword) }}
                        {{ form_errors(form.plainPassword) }}
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> Laisser vide pour conserver le mot de passe actuel
                        </small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.roles) }}
                        {{ form_widget(form.roles) }}
                        {{ form_errors(form.roles) }}
                        {{ form_help(form.roles) }}
                        <small class="form-text text-muted d-block mt-2">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <strong>ROLE_USER :</strong> Utilisateur standard (peut commenter, voir les articles)<br>
                            <strong>ROLE_ADMIN :</strong> Administrateur (accès complet au dashboard et gestion)
                        </small>
                    </div>

                    {% if user.id == app.user.id %}
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle-fill" aria-hidden="true"></i>
                            <strong>Note :</strong> Vous modifiez votre propre compte. Soyez prudent en changeant vos rôles.
                        </div>
                    {% endif %}

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="{{ path('admin_users_list') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle" aria-hidden="true"></i> Enregistrer les Modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Informations Supplémentaires</h5>
                    <ul class="list-unstyled mb-0">
                        <li><strong>ID :</strong> {{ user.id }}</li>
                        <li><strong>Date de création :</strong> {{ user.createdAt ? user.createdAt|date('d/m/Y à H:i') : 'N/A' }}</li>
                        <li><strong>Rôles actuels :</strong>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="badge bg-danger">Admin</span>
                                {% elseif role == 'ROLE_USER' %}
                                    <span class="badge bg-primary">User</span>
                                {% endif %}
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
