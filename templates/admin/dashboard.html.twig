{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="container mt-4 admin-dashboard">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">
                    <i class="bi bi-speedometer2"></i> Dashboard Admin
                </h1>
                <a href="{{ path('articles_create') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Cr√©er un nouvel article
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {# Statistiques #}
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">{{ stats.total }}</h4>
                                    <small>Total articles</small>
                                </div>
                                <i class="bi bi-file-text display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">{{ stats.published }}</h4>
                                    <small>Articles publi√©s</small>
                                </div>
                                <i class="bi bi-check-circle display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">{{ stats.drafts }}</h4>
                                    <small>Brouillons</small>
                                </div>
                                <i class="bi bi-clock display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">{{ stats.unprocessedMessages }}</h4>
                                    <small>Messages en attente</small>
                                </div>
                                <i class="bi bi-envelope-exclamation display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Deuxi√®me ligne de statistiques si n√©cessaire #}
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">{{ stats.mostViewed|length }}</h4>
                                    <small>Articles populaires</small>
                                </div>
                                <i class="bi bi-eye display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-secondary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">üìß</h4>
                                    <small>
                                        <a href="{{ path('app_contact') }}" class="text-white text-decoration-none">
                                            Voir formulaire contact
                                        </a>
                                    </small>
                                </div>
                                <i class="bi bi-link-45deg display-4 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul"></i> Liste des articles
                        <span class="badge bg-secondary ms-2">{{ pagination.getTotalItemCount }} articles</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if pagination.count > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Date de publication</th>
                                        <th scope="col">Titre</th>
                                        <th scope="col">Statut</th>
                                        <th scope="col">Vues</th>
                                        <th scope="col" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in pagination %}
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">#{{ article.id }}</span>
                                            </td>
                                            <td>
                                                {% if article.publishedAt %}
                                                    <span class="text-success">
                                                        <i class="bi bi-calendar-check"></i>
                                                        {{ article.publishedAt|date('d/m/Y H:i') }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">
                                                        <i class="bi bi-calendar-x"></i>
                                                        Non publi√©
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if article.imageName %}
                                                        <img src="{{ asset('uploads/images/' ~ article.imageName) }}" 
                                                             alt="Image" 
                                                             class="rounded me-2" 
                                                             style="width: 40px; height: 40px; object-fit: cover;">
                                                    {% else %}
                                                        <img src="{{ asset('images/placeholder.png') }}" 
                                                             alt="Pas d'image" 
                                                             class="rounded me-2" 
                                                             style="width: 40px; height: 40px; object-fit: cover;">
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ article.title }}</strong>
                                                        {% if article.slug %}
                                                            <br><small class="text-muted">{{ article.slug }}</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if article.isPublished %}
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Publi√©
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock"></i> Brouillon
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="bi bi-eye"></i> {{ article.viewCount ?? 0 }}
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    {% if article.slug %}
                                                        <!-- Voir l'article (ou √©diter si brouillon) -->
                                                        {% if article.isPublished %}
                                                            <a href="{{ path('articles_show', { slug: article.slug }) }}" 
                                                               class="btn btn-outline-primary btn-sm" 
                                                               title="Voir l'article publi√©"
                                                               target="_blank">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                        {% else %}
                                                            <a href="{{ path('articles_edit', { slug: article.slug }) }}" 
                                                               class="btn btn-outline-secondary btn-sm" 
                                                               title="√âditer le brouillon (non publi√©)">
                                                                <i class="bi bi-eye-slash"></i>
                                                            </a>
                                                        {% endif %}
                                                        
                                                        <!-- √âditer l'article -->
                                                        <a href="{{ path('articles_edit', { slug: article.slug }) }}" 
                                                           class="btn btn-outline-warning btn-sm" 
                                                           title="√âditer l'article">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        
                                                        <!-- Supprimer l'article -->
                                                        <form method="post" 
                                                              action="{{ path('articles_delete', { slug: article.slug }) }}" 
                                                              class="d-inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                            <button type="submit" 
                                                                    class="btn btn-outline-danger btn-sm" 
                                                                    title="Supprimer l'article"
                                                                    data-article-title="{{ article.title }}">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        <span class="text-muted">
                                                            <i class="bi bi-exclamation-triangle"></i> 
                                                            Slug manquant
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">Aucun article trouv√©</h4>
                            <p class="text-muted">Commencez par cr√©er votre premier article !</p>
                            <a href="{{ path('articles_create') }}" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Cr√©er un article
                            </a>
                        </div>
                    {% endif %}
                </div>

                {% if pagination.count > 0 %}
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                {% set start = (pagination.currentPageNumber - 1) * pagination.itemNumberPerPage + 1 %}
                                {% set end = pagination.currentPageNumber * pagination.itemNumberPerPage %}
                                {% if end > pagination.totalItemCount %}
                                    {% set end = pagination.totalItemCount %}
                                {% endif %}
                                Articles {{ start }} √† {{ end }} sur {{ pagination.totalItemCount }}
                            </div>
                            
                            {# Ajout du bloc pagination de KnpPaginatorBundle en bas de page avec style Bootstrap 5 #}
                            <nav aria-label="Pagination" class="d-flex justify-content-center mt-4">
                                {{ knp_pagination_render(pagination, 'pagination/bootstrap_pagination.html.twig') }}
                            </nav>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin-dashboard.js') }}"></script>
{% endblock %}
