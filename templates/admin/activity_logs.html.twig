{% extends 'base.html.twig' %}

{% block title %}Logs d'activité - Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Logs d'activité utilisateur</h1>

    <div class="mb-3">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">← Retour au dashboard</a>
    </div>

    {% if logs is empty %}
        <div class="alert alert-info">
            Aucun log d'activité pour le moment. Les logs seront créés automatiquement lors des actions sur les articles.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date/Heure</th>
                        <th>Action</th>
                        <th>Utilisateur</th>
                        <th>Article</th>
                        <th>Détails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.timestamp|date('d/m/Y H:i:s') }}</td>
                            <td>
                                {% if log.action == 'view' %}
                                    <span class="badge bg-info">Vue</span>
                                {% elseif log.action == 'create' %}
                                    <span class="badge bg-success">Création</span>
                                {% elseif log.action == 'edit' %}
                                    <span class="badge bg-warning">Édition</span>
                                {% elseif log.action == 'delete' %}
                                    <span class="badge bg-danger">Suppression</span>
                                {% elseif log.action == 'comment_create' %}
                                    <span class="badge bg-primary">Nouveau commentaire</span>
                                {% elseif log.action == 'comment_approve' %}
                                    <span class="badge bg-success">Commentaire approuvé</span>
                                {% elseif log.action == 'comment_delete' %}
                                    <span class="badge bg-danger">Commentaire supprimé</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ log.action }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if log.userEmail == 'Visiteur' %}
                                    <em>Visiteur</em>
                                {% else %}
                                    <strong>{{ log.userEmail }}</strong>
                                {% endif %}
                                <br>
                                <small class="text-muted">
                                    {% if log.userRoles %}
                                        {% for role in log.userRoles %}
                                            {% if role == 'ROLE_ADMIN' %}
                                                <span class="badge bg-danger">Admin</span>
                                            {% elseif role == 'ROLE_USER' %}
                                                <span class="badge bg-info">Utilisateur</span>
                                            {% elseif role == 'ROLE_VISITOR' %}
                                                <span class="badge bg-secondary">Visiteur</span>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </small>
                            </td>
                            <td>
                                <strong>{{ log.articleTitle|default('N/A') }}</strong>
                                <br>
                                <small class="text-muted">ID: {{ log.articleId }}</small>
                            </td>
                            <td>
                                <small>
                                    {% if log.metadata is defined and log.metadata is not empty and log.metadata.ip is defined %}
                                        <strong>IP:</strong> {{ log.metadata.ip }}<br>
                                    {% endif %}
                                </small>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
