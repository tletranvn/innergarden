{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - Inner Garden{% endblock %}

{% block meta_description %}{{ article.content|striptags|slice(0, 155) }}...{% endblock %}

{% block body %}
<div class="container mt-5">
    {# Breadcrumb - RGAA 12.3 #}
    {% embed 'partials/_breadcrumb.html.twig' %}
        {% block breadcrumb_items %}
            <li class="breadcrumb-item">
                <a href="{{ path('articles_list') }}">Articles</a>
            </li>
            {% if article.category %}
                <li class="breadcrumb-item">
                    {{ article.category.name }}
                </li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">
                {{ article.title|length > 50 ? article.title|slice(0, 50) ~ '...' : article.title }}
            </li>
        {% endblock %}
    {% endembed %}

    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Article détaillé #}
            <div class="card shadow-sm mb-4">
                {# Display article image if available - RGAA 1.1 + ECO-CONCEPTION #}
                {% if article.imageName %}
                    <div class="text-center mb-4">
                        {# Use the CloudinaryUploader service to generate the correct URL #}
                        <img src="{{ cloudinaryUploader.getUrl(article.imageName) }}"
                             class="img-fluid rounded shadow-sm"
                             alt="Image de l'article : {{ article.title }}"
                             loading="lazy"
                             decoding="async"
                             width="1200"
                             height="800"
                             style="max-height: 400px; width: auto;"
                             onerror="this.style.display='none'; this.onerror=null; this.alt='Image non disponible';">
                    </div>
                {% endif %}
                <div class="card-body">
                    <h1 class="card-title">{{ article.title }}</h1>
                    <p class="text-muted mb-2">
                        {% if article.author %}
                            Publié par {{ article.author.pseudo }} le {{ article.createdAt|date('d/m/Y') }}
                        {% else %}
                            <em>Auteur inconnu</em> - {{ article.createdAt|date('d/m/Y') }}
                        {% endif %}
                    
                        {% if article.category %}
                            dans la catégorie <strong>{{ article.category.name }}</strong>
                        {% endif %}
                    </p>
                    <p class="text-muted small">
                        {{ article.viewCount }} vue{{ article.viewCount > 1 ? 's' : '' }}
                    </p>
                    <hr>
                    <div class="article-content">
                        {{ article.content|nl2br }} {# Utilisation de nl2br pour conserver les sauts de ligne
                                                    Convertit les retours à la ligne (\n) en balises <br> HTML #}
                    </div>
                    <a href="{{ path('articles_list') }}" class="btn btn-secondary mt-3">Retour aux articles</a>
                    {# Admin peut editer et supprimer l'article #}
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="mt-3 d-flex gap-2">
                        {% if article.slug %}
                            <a href="{{ path('articles_edit', { slug: article.slug }) }}" class="btn btn-warning">
                                <i class="bi bi-pencil-square" aria-hidden="true"></i> Éditer
                            </a>
                        {% else %}
                            <button class="btn btn-warning" disabled>Éditer (slug manquant)</button>
                        {% endif %}

                        {# Formulaire de suppression (pour éviter une simple requête GET) #}
                        {% if article.slug %}
                            <form method="post"
                                action="{{ path('articles_delete', { slug: article.slug }) }}"
                                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                <button class="btn btn-danger" aria-label="Supprimer l'article">
                                    <i class="bi bi-trash" aria-hidden="true"></i> Supprimer
                                </button>
                            </form>
                        {% else %}
                            <button class="btn btn-danger" disabled>
                                <i class="bi bi-trash" aria-hidden="true"></i> Supprimer (slug manquant)
                            </button>
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Section Commentaires - RGAA 9.1 #}
            <section class="comments-section bg-light p-4 rounded shadow-sm" aria-labelledby="comments-heading">
                <h2 class="h4 mb-4" id="comments-heading" style="color: var(--color-section-title);">Commentaires ({{ article.comments|length }})</h2>
                <div id="comment-form-messages" class="mb-3"></div>

                {% if app.user %}
                    <div class="comment-form mb-5">
                        <h3 class="h5 mb-3" style="color: var(--color-section-title);">Laisser un commentaire</h3>
                        {{ form_start(commentForm, {
                            attr: {
                                id: 'commentForm',
                                'action': path('app_comment_new', { id: article.id })
                            }
                        }) }}
                            {{ form_row(commentForm.comment) }}
                            <button type="submit" class="btn btn-custom mt-3" id="submitCommentButton">Envoyer le commentaire</button>
                        {{ form_end(commentForm) }}
                    </div>
                {% else %}
                    <div class="alert alert-info text-center" role="alert">
                            Vous devez être <a href="{{ path('app_login') }}" class="alert-link">connecté(e)</a> pour laisser un commentaire.
                    </div>
                {% endif %}

                <div id="comments-list">
                    {% set approvedComments = article.comments|filter(c => c.isApproved)|sort((a, b) => b.createdAt <=> a.createdAt) %}
                    {% if approvedComments is not empty %}
                        {% for comment in approvedComments %}
                            <div class="card mb-3 comment-item" id="comment-{{ comment.id }}">
                                <div class="card-body d-flex">
                                    <div class="me-3">
                                        {% if comment.author.avatar %}
                                            <img src="{{ asset('uploads/avatars/' ~ comment.author.avatar) }}"
                                                 alt="Photo de profil de {{ comment.author.pseudo }}"
                                                 class="rounded-circle"
                                                 width="50"
                                                 height="50"
                                                 loading="lazy"
                                                 decoding="async">
                                        {% else %}
                                            <div class="avatar-placeholder rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width:50px; height:50px;"
                                                 role="img"
                                                 aria-label="Avatar par défaut de {{ comment.author.pseudo }}">
                                                {{ comment.author.pseudo[:1]|upper }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-1">{{ comment.author.pseudo }}</h5>
                                        <small class="text-muted">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                                        <p class="card-text mt-2">{{ comment.comment }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/comment.js') }}"></script>
{% endblock %}